<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewGasto"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agregar Gasto"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/negro"
                android:layout_marginBottom="20dp" />

            <!-- Nombre del gasto -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNombreGasto"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Nombre del gasto"
                    android:textColor="@color/negro"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Descripción del gasto -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDescripcionGasto"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Descripción"
                    android:textColor="@color/negro"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Cantidad -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCantidadGasto"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Cantidad"
                    android:textColor="@color/negro"
                    android:inputType="numberDecimal" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Categoría -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="24dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/etCategoriaGasto"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Categoría"
                    android:inputType="none"
                    android:textColor="@color/negro"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Fecha Final -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fecha:"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnFechaGasto"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1.5"
                    android:text="Seleccionar"
                    android:textSize="12sp"
                    android:backgroundTint="@color/celeste" />

                <TextView
                    android:id="@+id/etFechaGasto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="No seleccionada"
                    android:textSize="12sp"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Botones -->
            <Button
                android:id="@+id/btnGuardarGasto"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="GUARDAR GASTO"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#4CAF50" />

            <Button
                android:id="@+id/btnCancelarGasto"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="CANCELAR"
                android:textSize="16sp"
                android:backgroundTint="#F44336" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>